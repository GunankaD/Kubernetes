pipeline {
  agent any
  environment {
    IMAGE_NAME = "delivery_exporter:latest"
  }

  stages {

    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Build Docker Image') {
      steps {
        sh """
          cd INTERNALS/exercise6-monitoring/delivery-monitoring
          docker build -t ${IMAGE_NAME} .
        """
      }
    }

    stage('Deploy Exporter') {
      steps {
        sh """
          docker rm -f delivery_exporter || true
          docker run -d --name delivery_exporter -p 8000:8000 ${IMAGE_NAME}
        """
      }
    }

    stage('Deploy Prometheus & Grafana') {
      steps {
        sh '''#!/bin/bash
          # Use single quotes for Groovy, then bash sees real $WORKSPACE
          RUN_DIR="$WORKSPACE/INTERNALS/exercise6-monitoring/delivery-monitoring/prometheus_run_dir"

          mkdir -p "$RUN_DIR"

          SRC_DIR="$WORKSPACE/INTERNALS/exercise6-monitoring/delivery-monitoring"

          # Copy configs safely
          cp -f "$SRC_DIR/prometheus.yml" "$RUN_DIR/prometheus.yml"
          cp -f "$SRC_DIR/alert_rules.yml" "$RUN_DIR/alert_rules.yml"

          # Remove old containers
          docker rm -f prometheus || true
          docker rm -f grafana || true

          # Start Prometheus with directory mount
          docker run -d --name prometheus -p 9090:9090 \
            -v "$RUN_DIR":/etc/prometheus:ro \
            prom/prometheus

          # Start Grafana
          docker run -d --name grafana -p 3000:3000 grafana/grafana
        '''
      }
    }

  }

  post {
    success {
      echo "Monitoring stack deployed successfully!"
    }
    failure {
      echo "Pipeline failed!"
    }
  }
}
